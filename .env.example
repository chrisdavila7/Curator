# Non-secret environment template for local development and CI
# Toggle mock mode (no external services required)
USE_MOCK_INVENTORY=true
NEXT_PUBLIC_USE_MOCK_INVENTORY=true
AZURE_VERIFY_JWT=false
DEBUG_GRAPH=false

# Azure AD / MSAL configuration (fill in when integrating with real Azure)
# Tenant ID can be 'common' for multi-tenant or a specific GUID
NEXT_PUBLIC_AZURE_TENANT_ID=common
AZURE_TENANT_ID=

# Frontend SPA (public) client ID. Keep the placeholder for mock mode.
NEXT_PUBLIC_AZURE_FRONTEND_CLIENT_ID=00000000-0000-0000-0000-000000000000

# SPA redirect URI for local dev
NEXT_PUBLIC_AZURE_REDIRECT_URI=http://localhost:3000/auth/callback

# API scope requested by the frontend (exposed API permission or Graph scope)
# Provide either the NEXT_PUBLIC_* variant (preferred for client-side) or server-side fallback
NEXT_PUBLIC_AZURE_API_SCOPE=
AZURE_API_SCOPE=

# Microsoft Graph settings
GRAPH_SCOPES=https://graph.microsoft.com/.default
GRAPH_MAX_RETRIES=3

# Caching (milliseconds expressed in seconds for these variables)
CACHE_TTL_SECONDS=0
CACHE_ID_TTL_SECONDS=300
MODELS_CACHE_TTL_SECONDS=900
USERS_CACHE_TTL_SECONDS=900
DEPLOYED_CACHE_TTL_SECONDS=60
DEPLOYED_AT_TTL_SECONDS=300

# Tunables for performance
DEPLOYED_PAGE_SIZE=50
DEPLOYED_CONCURRENCY=10
DEPLOYED_MAX_RESULTS=50

# Public UI asset overrides (optional)
NEXT_PUBLIC_CHECKIN_OVERLAY_URL=/animations/checkinanimation.json
NEXT_PUBLIC_CHECKINOUT_OVERLAY_URL=/animations/checkinoutanimation.json
NEXT_PUBLIC_CHECKOUT_OVERLAY_URL=/animations/checkoutanimation.json
